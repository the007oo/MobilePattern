<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.WebView" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextHintColorRed" parent="TextAppearance.Design.Error">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:textColorHint">@color/dark_red</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/dark_red</item>
        <item name="colorControlNormal">@color/dark_red</item>
        <item name="colorControlActivated">@color/dark_red</item>
    </style>

    <style name="TextHintColorAccent" parent="TextAppearance.Design.Hint">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.FontBold" parent="android:TextAppearance">
        <item name="fontPath">fonts/CSPraKasBold.otf</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.FontRegular" parent="android:TextAppearance">
        <item name="fontPath">fonts/CSPraKas.otf</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="TextAppearance.ButtonNormal" parent="android:TextAppearance">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/default_text_header_normal</item>
    </style>

    <style name="TextToolBar">
        <item name="android:textAppearance">@style/TextAppearance.FontBold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_text_header_normal</item>
    </style>

    <style name="TextToolBar.Sub" parent="TextToolBar">
        <item name="android:textAppearance">@style/TextAppearance.FontRegular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_text_header_normal</item>
    </style>

    <style name="TextSegment">
        <item name="android:textAppearance">@style/TextAppearance.FontRegular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_text_body_extra_extra_small</item>
    </style>

    <style name="TextHeader">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_text_header_large</item>
    </style>

    <style name="TextBody">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_text_body_large</item>
    </style>

    <style name="TextIntro">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_text_header_extra_large</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowColor">@color/black_alpha_40</item>
    </style>

    <style name="TextMenuActionBlue">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/default_text_header_extra_large</item>
    </style>

    <style name="MenuPadding">
        <item name="android:paddingLeft">@dimen/default_margin_padding_large</item>
        <item name="android:paddingRight">@dimen/default_margin_padding_large</item>
        <item name="android:paddingTop">@dimen/default_margin_padding_large</item>
        <item name="android:paddingBottom">@dimen/default_margin_padding_large</item>
    </style>

    <style name="MenuPadding.NoPaddingDown" parent="MenuPadding">
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="MenuTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_text_header_small</item>
    </style>

    <style name="MenuTextView.Sub" parent="MenuTextView">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/default_text_header_extra_small</item>
    </style>

    <style name="TransparentDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/black_alpha_40</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_blue_primary</item>
        <item name="colorAccent">@color/text_blue</item>
    </style>

</resources>
