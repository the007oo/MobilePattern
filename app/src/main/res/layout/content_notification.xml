<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/bottom_bar_height"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:orientation="vertical"
    tools:context=".activity.NotificationActivity">


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_divider"
        android:layout_marginTop="@dimen/default_margin_padding_normal"
        android:background="@color/bg_divider" />

    <RelativeLayout
        style="@style/MenuPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            style="@style/MenuTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_notification_activity_allow"
            android:textAppearance="@style/TextAppearance.FontBold"></TextView>

        <Switch
            android:id="@+id/allowSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_divider"
        android:background="@color/bg_divider" />

    <LinearLayout
        android:id="@+id/subNotificationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bottom_bar_height"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_divider"
            android:background="@color/bg_divider" />

        <RelativeLayout
            style="@style/MenuPadding.NoPaddingDown"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_bar_height"
            android:background="@color/white">

            <TextView
                style="@style/MenuTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_notification_activity_news"
                android:textAppearance="@style/TextAppearance.FontBold"></TextView>

            <Switch
                android:id="@+id/newSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_divider"
                android:layout_alignParentBottom="true"
                android:background="@color/bg_divider" />

        </RelativeLayout>

        <RelativeLayout
            style="@style/MenuPadding.NoPaddingDown"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_bar_height"
            android:background="@color/white">

            <TextView
                style="@style/MenuTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_notification_activity_promotion"
                android:textAppearance="@style/TextAppearance.FontBold"></TextView>

            <Switch
                android:id="@+id/promotionsSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_divider"
                android:layout_alignParentBottom="true"
                android:background="@color/bg_divider" />


        </RelativeLayout>

        <RelativeLayout
            style="@style/MenuPadding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_bar_height"
            android:background="@color/white">

            <TextView
                style="@style/MenuTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_notification_activity_order"
                android:textAppearance="@style/TextAppearance.FontBold"></TextView>

            <Switch
                android:id="@+id/orderSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_divider"
        android:background="@color/bg_divider" />

</LinearLayout>
