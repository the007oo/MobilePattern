<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_divider"
            android:layout_marginTop="@dimen/default_margin_padding_normal"
            android:background="@color/bg_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/notificationLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/m_image_size"
                    android:layout_height="@dimen/m_image_size"
                    android:layout_marginBottom="@dimen/default_margin_padding_large"
                    android:layout_marginLeft="@dimen/default_margin_padding_normal"
                    android:layout_marginRight="@dimen/default_margin_padding_normal"
                    android:layout_marginTop="@dimen/default_margin_padding_large"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_line_alert" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/NotificationLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="@dimen/default_text_header_small"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/menu_settings_activity_notification"
                            android:textAppearance="@style/TextAppearance.FontBold" />

                    </LinearLayout>


                    <ImageView
                        android:layout_width="@dimen/s_image_size"
                        android:layout_height="@dimen/s_image_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/default_margin_padding_normal"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_next" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_divider"
                        android:layout_alignParentBottom="true"
                        android:background="@color/bg_divider" />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/changePasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/m_image_size"
                    android:layout_height="@dimen/m_image_size"
                    android:layout_marginBottom="@dimen/default_margin_padding_large"
                    android:layout_marginLeft="@dimen/default_margin_padding_normal"
                    android:layout_marginRight="@dimen/default_margin_padding_normal"
                    android:layout_marginTop="@dimen/default_margin_padding_large"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_lock" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="@dimen/default_text_header_small"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/menu_settings_activity_change_password"
                            android:textAppearance="@style/TextAppearance.FontBold" />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_divider"
                        android:layout_alignParentBottom="true"
                        android:background="@color/bg_divider" />


                    <ImageView
                        android:layout_width="@dimen/s_image_size"
                        android:layout_height="@dimen/s_image_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/default_margin_padding_normal"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_next" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/feedBackLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/m_image_size"
                    android:layout_height="@dimen/m_image_size"
                    android:layout_marginBottom="@dimen/default_margin_padding_large"
                    android:layout_marginLeft="@dimen/default_margin_padding_normal"
                    android:layout_marginRight="@dimen/default_margin_padding_normal"
                    android:layout_marginTop="@dimen/default_margin_padding_large"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_lock" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="@dimen/default_text_header_small"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/menu_settings_activity_feed_back"
                            android:textAppearance="@style/TextAppearance.FontBold" />

                    </LinearLayout>


                    <ImageView
                        android:layout_width="@dimen/s_image_size"
                        android:layout_height="@dimen/s_image_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/default_margin_padding_normal"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_next" />


                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_divider"
            android:background="@color/bg_divider" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_divider"
            android:layout_marginTop="@dimen/default_margin_padding_normal"
            android:background="@color/bg_divider" />

        <LinearLayout
            android:id="@+id/changeLanguageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/flagLanguageImageView"
                    android:layout_width="@dimen/m_image_size"
                    android:layout_height="@dimen/m_image_size"
                    android:layout_marginBottom="@dimen/default_margin_padding_large"
                    android:layout_marginLeft="@dimen/default_margin_padding_normal"
                    android:layout_marginRight="@dimen/default_margin_padding_normal"
                    android:layout_marginTop="@dimen/default_margin_padding_large"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_en_flag" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="@dimen/default_text_header_small"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/menu_settings_activity_change_language"
                            android:textAppearance="@style/TextAppearance.FontBold" />

                        <TextView
                            android:textSize="@dimen/default_text_header_extra_small"
                            android:textColor="@color/gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/menu_settings_activity_change_language_sub"
                            android:textAppearance="@style/TextAppearance.FontBold" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/s_image_size"
                        android:layout_height="@dimen/s_image_size"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/default_margin_padding_normal"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_next" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_divider"
            android:layout_marginBottom="@dimen/default_margin_padding_normal"
            android:background="@color/bg_divider" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_divider"
            android:background="@color/bg_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/helpLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/m_image_size"
                    android:layout_height="@dimen/m_image_size"
                    android:layout_marginBottom="@dimen/default_margin_padding_large"
                    android:layout_marginLeft="@dimen/default_margin_padding_normal"
                    android:layout_marginRight="@dimen/default_margin_padding_normal"
                    android:layout_marginTop="@dimen/default_margin_padding_large"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_help" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="@dimen/default_text_header_small"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/menu_settings_activity_help"
                            android:textAppearance="@style/TextAppearance.FontBold" />

                    </LinearLayout>


                    <ImageView
                        android:layout_width="@dimen/s_image_size"
                        android:layout_height="@dimen/s_image_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/default_margin_padding_normal"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_next" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_divider"
                        android:layout_alignParentBottom="true"
                        android:background="@color/bg_divider" />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/aboutUsLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/m_image_size"
                    android:layout_height="@dimen/m_image_size"
                    android:layout_marginBottom="@dimen/default_margin_padding_large"
                    android:layout_marginLeft="@dimen/default_margin_padding_normal"
                    android:layout_marginRight="@dimen/default_margin_padding_normal"
                    android:layout_marginTop="@dimen/default_margin_padding_large"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_about" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="@dimen/default_text_header_small"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/menu_settings_activity_about_us"
                            android:textAppearance="@style/TextAppearance.FontBold" />

                    </LinearLayout>


                    <ImageView
                        android:layout_width="@dimen/s_image_size"
                        android:layout_height="@dimen/s_image_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/default_margin_padding_normal"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_next" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/default_divider"
                        android:layout_alignParentBottom="true"
                        android:background="@color/bg_divider" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/versionLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/m_image_size"
                    android:layout_height="@dimen/m_image_size"
                    android:layout_marginBottom="@dimen/default_margin_padding_large"
                    android:layout_marginLeft="@dimen/default_margin_padding_normal"
                    android:layout_marginRight="@dimen/default_margin_padding_normal"
                    android:layout_marginTop="@dimen/default_margin_padding_large"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_about" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="@dimen/default_text_header_small"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/menu_settings_activity_version"
                            android:textAppearance="@style/TextAppearance.FontBold" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/s_image_size"
                        android:layout_height="@dimen/s_image_size"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/default_margin_padding_normal"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_next" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_divider"
            android:layout_marginBottom="@dimen/default_margin_padding_normal"
            android:background="@color/bg_divider" />
    </LinearLayout>
</ScrollView>